@model List<MVCDemo17.Models.Product>

<h1>Product List</h1>

<table class="table">
    <tr>
        @*<td>
            Product ID
        </td>*@
        <td>Name</td>
        <td>Description</td>
        <td>Category</td>
        <td>Price</td>
    </tr>
@foreach (var item in Model)
{
    <tr>
        @*<td>@item.ProductID</td>*@
        <td><a asp-action="Details" asp-route-id="@item.ProductID" >@item.Name</a></td>
        <td>@item.Description</td>
        <td>@item.Category</td>
        <td>@item.Price.ToString("C2")</td>
    </tr>
}
</table>



