@model MVCDemo17.Models.Product

<h2>Add a Product</h2>

<form asp-action="AddProduct" method="post">
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="Name">Name</label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="Description">Description</label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Description" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="Price">Price</label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="Category">Category</label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Category"/>
                <span asp-validation-for="Category" class="text-danger"></span>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
